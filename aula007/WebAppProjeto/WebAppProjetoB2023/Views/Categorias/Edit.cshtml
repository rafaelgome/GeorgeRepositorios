@model WebAppProjetoB2023.Models.Categoria

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            color: white;
            text-align: center;
        }

        h4 {
            width: 100%;
            font-size: 300%;
            margin-bottom: 0.5em;
            border-bottom: 2px solid lime;
        }

        body {
            background-image: linear-gradient(to left top, black, black, darkgreen);
            display: flex;
            justify-content: center;
            align-content: center;
            height: 100vh;
            flex-wrap: wrap;
        }

        body > div {
            min-width: 100%;
        }

        a, h4 {
            color: lime;
        }

        .form-group > label {
            color: lime;
            margin-right: 1em;
            align-self: center;
        }

        .dados {
            display: flex;
        }

        .dados input {
            color: lime;
            background-color: black;
            border-color: lime;
            text-align: start;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0.5em 2px;
        }

        .dados input:focus {
            outline: none;
        }

        .btn {
            color: deepskyblue;
            margin: 1em 0;
            background-color: transparent;
            border-color: deepskyblue;
            padding: 0.2em 1em;
        }

    </style>
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CategoriaId)

        <div class="form-horizontal">
            <h4>Categoria</h4>
           
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoriaId)

            <div class="form-group dados">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Alterar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Voltar ao inicio", "Index")
    </div>
</body>
</html>
